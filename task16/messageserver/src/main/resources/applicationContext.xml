<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://www.springframework.org/schema/beans" xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-3.0.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <bean id="wsServerMessageServerClient" class="rem.hw16.messageserver.server.ws.WsServerMessageServerClient"
          lazy-init="true">
        <constructor-arg name="host" value="localhost"/>
        <constructor-arg name="port" value="6000"/>
    </bean>

    <context:component-scan base-package="rem.hw16.messageserver.server"/>
</beans>